{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [
        150
      ]
    },
    "object-literal-sort-keys": false,
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "quotemark": false,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": true
  },
  "linterOptions": {
    "exclude": [
      "src/**/*.spec.ts"
    ]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}